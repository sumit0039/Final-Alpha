<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <RelativeLayout
        android:id="@+id/chat_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/left_chat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_1"
                android:backgroundTint="@color/blue_light"
                android:padding="8dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text=""
                    android:id="@+id/left_chat_textview"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:text=""
                    android:id="@+id/left_chat_time_textview"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/left_read_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_color"
                    android:text=""
                    android:layout_gravity="end"
                    android:textSize="12sp"
                    android:id="@+id/is_left_chatRead"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/left_chat_layouts">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rounded_1"
            android:backgroundTint="@color/blue_light">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="4dp"
                android:textSize="18sp"
                android:text=""
                android:id="@+id/lefts_chat_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_color"
                android:padding="2dp"
                android:layout_gravity="bottom|end"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/lefts_chat_time_textview"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_reads_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_color"
                android:text=""
                android:layout_gravity="bottom|end"
                android:textSize="12sp"
                android:id="@+id/is_left_chatsRead"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginStart="80dp"
            android:id="@+id/right_chat_layout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_1"
            android:backgroundTint="@color/blue"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text=""
                android:id="@+id/right_chat_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="end"
                android:padding="2dp"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/right_chat_time_textview"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_read_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="end"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_color"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/is_right_chatRead"/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="80dp"
            android:id="@+id/right_chat_layouts"
            tools:ignore="RelativeOverlap">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rounded_1"
            android:backgroundTint="@color/blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="4dp"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textSize="18sp"
                android:text=""
                android:id="@+id/rights_chat_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="2dp"
                android:layout_gravity="bottom|end"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/rights_chat_time_textview"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_reads_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/is_right_chatsRead"/>
        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginEnd="80dp"
            android:id="@+id/left_attachment_layouts">

            <ImageView
                android:id="@+id/left_attachment"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone"
                android:layout_gravity="start|center"
                android:background="@drawable/bg_rounded_1"
                android:backgroundTint="@color/blue_light"
                android:src="@drawable/icon_no_image"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="fdsfsf"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:background="@drawable/chat_stroke"
                android:backgroundTint="@color/blue_light"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:gravity="start|center"
                android:layout_gravity="start|center"
                android:textSize="12sp"
                android:id="@+id/left_image_pdf_textview" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_margin="4dp"
                android:text=""
                android:visibility="gone"
                android:layout_gravity="bottom|end"
                android:textSize="12sp"
                android:id="@+id/left_image_time_textview"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginStart="80dp"
            android:id="@+id/right_attachment_layouts">
            <ImageView
                android:id="@+id/right_attachment"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="end|center"
                android:visibility="gone"
                android:src="@drawable/icon_no_image"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:background="@drawable/button_stroke"
                android:backgroundTint="@color/blue"
                android:padding="4dp"
                android:text=""
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginStart="4dp"
                android:gravity="end|center"
                android:layout_gravity="end|center"
                android:textSize="12sp"
                android:id="@+id/right_image_pdf_textview" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:gravity="end"
                android:visibility="gone"
                android:layout_margin="4dp"
                android:layout_gravity="bottom|end"
                android:text=""
                android:textSize="12sp"
                android:id="@+id/rights_attachment_time_textview"/>

        </LinearLayout>

        <TextView
            android:id="@+id/isRead"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:gravity="bottom|end"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>
</layout>