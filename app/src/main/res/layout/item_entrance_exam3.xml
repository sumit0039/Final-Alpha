<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_rounded_1_no_padding"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCover"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_no_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/ImageView.Corner" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvExamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JEE Preliminary"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvExamDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvExamName"
                android:layout_toLeftOf="@+id/btnView"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Joint Entrance Examination Examination Examination Examination"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnView"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_button"
                android:padding="0dp"
                android:text="@string/view"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />


        </RelativeLayout>


    </LinearLayout>
</layout>



