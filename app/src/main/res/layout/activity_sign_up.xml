                    android:src="@drawable/icon_info"
                    app:layout_constraintBottom_toBottomOf="@+id/textView10"
                    app:layout_constraintEnd_toEndOf="@+id/etInstituteUsername"
                    app:layout_constraintTop_toTopOf="@+id/textView10"
                    app:tint="@color/gray_color" />

                <EditText
                    android:id="@+id/etInstituteUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_rounded_1"
                    android:inputType="textPersonName"
                    android:hint="e.g name_surname"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"  />

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/etInstituteListUsername"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
