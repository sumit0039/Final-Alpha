<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".signUp.SignUpActivity">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal"
            android:backgroundTint="@color/blue_light"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/llStudent"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/tvStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/student"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/llTeacher"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                app:cardCornerRadius="50dp"
                app:cardElevation="0dp">


                <TextView
                    android:id="@+id/tvTeacher"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="@string/teacher"
                    android:textAlignment="center"
                    android:textColor="@color/gray_color"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout7"
            tools:layout_editor_absoluteX="15dp">

            <View
                android:id="@+id/viewInfo"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@color/blue" />

            <View
                android:id="@+id/viewAboutMe"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@color/blue_light" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/first_name"
                    android:textColor="@color/gray_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="@+id/textView7"
                    app:layout_constraintStart_toEndOf="@+id/textView7" />


                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_rounded_1"
                    android:digits="qwertyuioplkjhgfdsazxcvbnm QWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:hint="Enter your first name"
                    android:inputType="textCapSentences|textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/last_name"
                    android:textColor="@color/gray_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/etFirstName" />


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="@+id/textView8"
                    app:layout_constraintStart_toEndOf="@+id/textView8" />


                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_rounded_1"
                    android:digits="qwertyuioplkjhgfdsazxcvbnm QWERTYUIOPLKJHGFDSAZXCVBNM"
                    android:hint="Enter your last name"
                    android:inputType="textCapSentences|textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView8"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/add_username"
                    android:textColor="@color/gray_color"
                    android:visibility="visible"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/etLastName" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_star"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toEndOf="@+id/textView9" />

                <ImageView
                    android:id="@+id/ivInfo1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:src="@drawable/icon_info"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintEnd_toEndOf="@+id/etUsername"
                    app:layout_constraintTop_toTopOf="@+id/textView9"
                    app:tint="@color/gray_color" />


                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:visibility="visible"
                    android:background="@drawable/bg_rounded_1"
                    android:inputType="textPersonName"
                    android:hint="e.g name_surname"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
                    app:layout_constraintTop_toBottomOf="@+id/textView9" />

                <TextView
                    android:id="@+id/tvValidUserName1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/invalid"
                    android:visibility="invisible"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/etUsername"
                    app:layout_constraintTop_toBottomOf="@+id/etUsername" />


                <LinearLayout
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/etUsername">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/institute_username"
                        android:textColor="@color/gray_color"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/info"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_info"
                    app:layout_constraintEnd_toEndOf="@+id/textView10"
                    app:layout_constraintTop_toTopOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:tint="@color/gray_color" />

                <RelativeLayout
                    android:id="@+id/tvValidUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
                    app:layout_constraintTop_toBottomOf="@+id/textView10">

                    <EditText
                        android:id="@+id/etInstituteUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/bg_rounded_1"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Select"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_light"
                        android:textSize="18sp" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/icon_arrow_down" />


                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/etInstituteListUsername"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:hint="Select"
                        android:background="@color/transparent"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="@string/invalid"
                        android:visibility="gone"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/etInstituteListUsername"
                        app:layout_constraintTop_toBottomOf="@+id/etInstituteListUsername" />
                </RelativeLayout>


                <!--<TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
