-->
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/faculty"
                    android:textColor="@color/gray_color"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/tvValidUserName" />


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginBottom="17dp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="@+id/textView12"
                    app:layout_constraintStart_toEndOf="@+id/textView12" />


                <EditText
                    android:id="@+id/etFaculty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_rounded_1"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Select"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_light"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView12"
                    app:layout_constraintTop_toBottomOf="@+id/textView12" />


                <Spinner
                    android:id="@+id/spinnerFaculty"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/etFaculty"
                    app:layout_constraintEnd_toEndOf="@+id/etFaculty"
                    app:layout_constraintStart_toStartOf="@+id/etFaculty"
                    app:layout_constraintTop_toTopOf="@+id/etFaculty" />


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow_down"
                    app:layout_constraintBottom_toBottomOf="@+id/etFaculty"
                    app:layout_constraintEnd_toEndOf="@+id/etFaculty"
                    app:layout_constraintHorizontal_bias="0.94"
                    app:layout_constraintStart_toStartOf="@+id/etFaculty"
                    app:layout_constraintTop_toTopOf="@+id/etFaculty" />


                <LinearLayout
                    android:id="@+id/llBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
